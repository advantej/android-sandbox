<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomView">
        <attr name="handle" format="reference" />
        <attr name="content" format="reference" />
        <attr name="orientation" format="enum">
            <enum name="horizontal_left_right" value="0"/>
            <enum name="horizontal_right_left" value="1"/>
            <enum name="horizontal_top_down" value="2"/>
            <enum name="horizontal_bottom_up" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="AnotherCustomView">
        <attr name="left_view" format="reference" />
        <attr name="main_view" format="reference" />
        <attr name="right_view" format="reference" />
        <attr name="left_view_padding" format="dimension" />
        <attr name="right_view_padding" format="dimension" />
    </declare-styleable>
</resources>